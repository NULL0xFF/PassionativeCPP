{
    "tasks": [
        {
            "type": "shell",
            "label": "Build (G++)",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Create Binary Folder"
            ],
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Create Binary Folder",
            "command": "/bin/mkdir",
            "args": [
                "-p",
                "bin"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "none",
            "detail": "Pre-Task for Build"
        }
    ],
    "version": "2.0.0"
}